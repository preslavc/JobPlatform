@model JobPlatform.Web.ViewModels.CvMessages.CreateCvViewModel
@{
    this.ViewData["Title"] = "Кандидатстване";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        branding: false,
        plugins: [
            "image paste table code media"
        ]
    });
</script>

<h2>@this.ViewData["Title"]</h2>
<form method="post" asp-controller="Cv" asp-action="Apply" class="form" enctype="multipart/form-data">
    <input asp-for="@Model.PostId" hidden/>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" disabled/>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <textarea asp-for="@Model.Message" class="form-control" rows="10"></textarea>
        <span asp-validation-for="@Model.Message"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.CvFile"></label>
        <input asp-for="@Model.CvFile" class="form-control" />
        <span asp-validation-for="@Model.CvFile"></span>
    </div>

    <div>
        <input type="submit" value="Изпрати" class="btn btn-primary" />
    </div>
</form>