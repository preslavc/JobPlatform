@using JobPlatform.Common
@model JobPlatform.Web.ViewModels.Browse.SearchViewModel
@{
    this.ViewData["Title"] = "Job posts";
}
<partial name="_SearchPartial" model="Model.SearchPartialViewModel" />

<div class="text-body display-4">
    @if (Model.JobsDisplayViewModel.JobPosts.Count() == 0)
    {
        <div class="text-center">
            <h4>
                We couldn't find anything. :(
                <br />
                Try different or less specific keywords
            </h4>
        </div>
    }
    else
    {
        <h4>Search results: </h4>
    }
</div>

<partial name="_JobBrowsePartial" model="@Model.JobsDisplayViewModel" />

@if (this.Model.PagesCount > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (this.Model.CurrentPage != 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Browse" asp-action="Search" asp-route-keyword="@Model.Keyword" asp-route-city="@Model.City" asp-route-page="@(this.Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                string active = i == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link" asp-controller="Browse" asp-action="Search" asp-route-keyword="@Model.Keyword" asp-route-city="@Model.City" asp-route-page="@i">@i</a>
                </li>
            }

            @if (this.Model.CurrentPage != Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Browse" asp-action="Search" asp-route-keyword="@Model.Keyword" asp-route-city="@Model.City" asp-route-page="@(this.Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}
