@model JobPlatform.Web.ViewModels.Browse.SearchPartialViewModel

<div class="d-flex justify-content-center">
    <form class="row" asp-controller="Browse" asp-action="Search" asp-route-keyword="@Model.Keyword" asp-route-city="@Model.City" method="get">
        <div class="form-group col-sm-4 mb-2">
            <input asp-for=@Model.Keyword class="form-control" />
            <span asp-validation-for=@Model.Keyword class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4 mb-2">
            <input asp-for=@Model.City class="form-control" />
            <span asp-validation-for=@Model.City class="text-danger"></span>
        </div>
        <div class="form-group col-sm-2 text-center">
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </div>
    </form>
</div>
