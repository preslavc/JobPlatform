@model JobPlatform.Web.ViewModels.Shared.SearchPartialViewModel

<div class="d-flex justify-content-center">
    <form class="form-inline md-1" asp-controller="Home" asp-action="Search" asp-route-keyword="@Model.Keyword" asp-route-city="@Model.City" method="get">
        <div class="form-group mb-2">
            <input asp-for=@Model.Keyword class="form-control" />
            <span asp-validation-for=@Model.Keyword class="text-danger"></span>
        </div>
        <div class="form-group mx-sm-3 mb-2 mr-2">
            <input asp-for=@Model.City class="form-control" />
            <span asp-validation-for=@Model.City class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Търси</button>
    </form>
</div>
