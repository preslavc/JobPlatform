@model JobPlatform.Web.ViewModels.Reports.ReportViewModel
@{
    this.ViewData["Title"] = $"Report a job post: {Model.PostTitle}";
    IEnumerable<SelectListItem> reportReasons = JobPlatform.Common.DisplayNameConstants.ReportType.Select(s => new SelectListItem { Text = s }).ToList();
}

<h2>@this.ViewData["Title"]</h2>
<form method="post" asp-controller="Report" asp-action="Create" class="form">
    <input hidden asp-for="@Model.PostId" />
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <select asp-for="@Model.Title" asp-items="reportReasons" class="form-control"></select>
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <textarea asp-for="@Model.Message" class="form-control" rows="10"></textarea>
        <span asp-validation-for="@Model.Message" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>