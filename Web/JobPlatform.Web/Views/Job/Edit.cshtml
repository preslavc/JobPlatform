@model JobPlatform.Web.ViewModels.Jobs.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        branding: false,
        plugins: [
            "image paste table code media"
        ]
    });
</script>

<h2>@this.ViewData["Title"]</h2>
<form method="post" asp-controller="Job" asp-action="Edit" class="form">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.City"></label>
            <input asp-for="@Model.City" class="form-control" />
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Country"></label>
            <input asp-for="@Model.Country" class="form-control" />
            <span asp-validation-for="@Model.Country" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <textarea asp-for="@Model.Description" class="form-control" rows="10"></textarea>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.TagString"></label>
        <input asp-for="@Model.TagString" class="form-control" />
        <span asp-validation-for="@Model.TagString" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>
