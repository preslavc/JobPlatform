@model JobPlatform.Web.ViewModels.Management.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = $"{Model.Name} Dashboard";
}

<h1>@this.ViewData["Title"]</h1>
<br />
<a class="btn btn-primary" asp-area="" asp-controller="Job" asp-action="Create">Create new job post</a>
<br />
<br />
<h5>Active job posts: @Model.ActiveJobs</h5>
<hr />
@foreach (var job in Model.JobPosts)
{
    <div class="text-body">
        <h6 class="job-card_title">@job.Title</h6>
        <h7 class="job-card_location">@job.City, @job.Country</h7>
        <p class="job-card_listed-status">@job.CreatedOn</p>
        <a asp-area="Management" asp-controller="Dashboard" asp-action="Messages" asp-route-postId="@job.Id">
            <h6>@job.ApplyCounter</h6>
        </a>
    </div>
    <hr />
}

@if (this.Model.PagesCount > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (this.Model.CurrentPage != 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Management" asp-controller="Dashboard" asp-action="Index" asp-route-page="@(this.Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                string active = i == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link" asp-area="Management" asp-controller="Dashboard" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            @if (this.Model.CurrentPage != Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Management" asp-controller="Dashboard" asp-action="Index" asp-route-page="@(this.Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}