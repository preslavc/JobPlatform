@model JobPlatform.Web.ViewModels.Administration.Users.UserBrowseViewModel
@{
    ViewData["Title"] = "Search";
}

<div>
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @if (this.TempData["InfoMessage"] != null)
            {
                <div class="alert alert-success">
                    @this.TempData["InfoMessage"]
                </div>
            }
            <h1>@this.ViewData["Title"]</h1>
            <a class="btn btn-primary" asp-area="Administration" asp-controller="User" asp-action="CreateUser">Create user</a>
            <a class="btn btn-primary" asp-area="Administration" asp-controller="User" asp-action="CreateEmployer">Create employer</a>
            <br />
            <br />
            <partial name="_SearchUserPartial" model="@Model.SearchUserViewModel" />

            <div class="row">
                @foreach (var user in Model.Users)
                {
                    <div class="col-md-4 table-hover">
                        <a asp-area="Administration" asp-controller="User" asp-action="Profile" asp-route-userId="@user.Id" style="color : inherit;">
                            <div class="card col-md-12 m-2">
                                <div class="card-body text-center">
                                    <h5 class="job-card_title text-overflow__ellipsis">@user.UserName</h5>
                                    <p>
                                        <span class="card-subtitle text-overflow__ellipsis">@user.Email</span>
                                        <time datetime="@user.CreatedOn.ToString("o")"></time>
                                    </p>

                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
