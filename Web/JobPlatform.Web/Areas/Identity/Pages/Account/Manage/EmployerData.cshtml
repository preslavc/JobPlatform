@page
@model EmployerDataModel
@{
    ViewData["Title"] = "Данни за фирма";
    ViewData["ActivePage"] = ManageNavPages.EmployerData;
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        branding: false,
        plugins: [
            "image paste table code media"
        ]
    });
</script>

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="EmployerName"></label>
                    <input asp-for="EmployerName" class="form-control" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Eik"></label>
                    <input asp-for="Eik" class="form-control" disabled />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Country"></label>
                    <input asp-for="Input.Country" class="form-control" />
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <textarea asp-for="Input.Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Input.Description"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Image"></label>
                <input asp-for="Input.Image"/>
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}