@page
@model JobPlatform.Web.Areas.Identity.Pages.Account.SignUpModel
@{
    this.ViewData["Title"] = "Registration";
}
<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6 pt-2 d-flex align-items-stretch">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">User registration</h5>
                    <p class="card-text">By registering, you will gain access to all services for job seekers. Services for jobseekers are free of charge.</p>
                    <div class="align-bottom">
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Select</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 pt-2 d-flex align-items-stretch">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Employer registration</h5>
                    <p class="card-text">By registering you will gain access to section For Employers and all services offers for employers. The registration is free of charge.</p>
                    <div class="align-bottom">
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/cRegister">Select</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>